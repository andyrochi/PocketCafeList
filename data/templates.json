{
    "location_card": {
        "type": "bubble",
        "hero": {
          "type": "image",
          "url": "{{imageUrl}}",
          "size": "full",
          "aspectRatio": "20:13",
          "aspectMode": "cover",
          "action": {
            "type": "uri",
            "uri": "{{imageActionLink}}"
          }
        },
        "body": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "{{locationName}}",
              "weight": "bold",
              "size": "xl"
            },
            {
              "type": "text",
              "text": "{{distance}}公尺",
              "size": "md"
            },
            {
              "type": "box",
              "layout": "vertical",
              "margin": "lg",
              "spacing": "sm",
              "contents": [
                {
                  "type": "box",
                  "layout": "baseline",
                  "spacing": "sm",
                  "contents": [
                    {
                      "type": "text",
                      "text": "地址",
                      "color": "#aaaaaa",
                      "size": "sm",
                      "flex": 1
                    },
                    {
                      "type": "text",
                      "text": "{{address}}",
                      "wrap": true,
                      "color": "#666666",
                      "size": "sm",
                      "flex": 5
                    }
                  ]
                },
                {
                  "type": "box",
                  "layout": "baseline",
                  "spacing": "sm",
                  "contents": [
                    {
                      "type": "text",
                      "text": "時間",
                      "color": "#aaaaaa",
                      "size": "sm",
                      "flex": 1
                    },
                    {
                      "type": "text",
                      "text": "10:00 - 23:00",
                      "wrap": true,
                      "color": "#666666",
                      "size": "sm",
                      "flex": 5
                    }
                  ]
                }
              ]
            }
          ]
        },
        "footer": {
          "type": "box",
          "layout": "vertical",
          "spacing": "sm",
          "contents": [
            {
              "type": "button",
              "style": "link",
              "height": "sm",
              "action": {
                "type": "uri",
                "label": "View on Cafe Nomad",
                "uri": "{{nomadUrl}}"
              },
              "color": "#905c44"
            },
            {
              "type": "button",
              "style": "link",
              "height": "sm",
              "action": {
                "type": "uri",
                "label": "Official Site",
                "uri": "https://www.google.com"
              },
              "color": "#49281A"
            },
            {
              "type": "button",
              "action": {
                "type": "postback",
                "label": "儲存地點",
                "data": "save={{id}}",
                "displayText": "儲存地點：{{locationName}}"
              },
              "color": "#905c44",
              "style": "primary"
            }
          ],
          "flex": 0
        }
      },
      "saved_location_card": {
        "type": "bubble",
        "hero": {
          "type": "image",
          "url": "{{imageUrl}}",
          "size": "full",
          "aspectRatio": "20:13",
          "aspectMode": "cover",
          "action": {
            "type": "uri",
            "uri": "{{imageActionLink}}"
          }
        },
        "body": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "{{locationName}}",
              "weight": "bold",
              "size": "xl"
            },
            {
              "type": "text",
              "text": "{{city}}",
              "size": "md"
            },
            {
              "type": "box",
              "layout": "vertical",
              "margin": "lg",
              "spacing": "sm",
              "contents": [
                {
                  "type": "box",
                  "layout": "baseline",
                  "spacing": "sm",
                  "contents": [
                    {
                      "type": "text",
                      "text": "儲存日期",
                      "color": "#aaaaaa",
                      "size": "sm",
                      "flex": 2
                    },
                    {
                      "type": "text",
                      "text": "{{addDate}}",
                      "wrap": true,
                      "color": "#666666",
                      "size": "sm",
                      "flex": 7
                    }
                  ]
                },
                {
                  "type": "box",
                  "layout": "baseline",
                  "spacing": "sm",
                  "contents": [
                    {
                      "type": "text",
                      "text": "地址",
                      "color": "#aaaaaa",
                      "size": "sm",
                      "flex": 2
                    },
                    {
                      "type": "text",
                      "text": "{{address}}",
                      "wrap": true,
                      "color": "#666666",
                      "size": "sm",
                      "flex": 7
                    }
                  ]
                },
                {
                  "type": "box",
                  "layout": "baseline",
                  "spacing": "sm",
                  "contents": [
                    {
                      "type": "text",
                      "text": "時間",
                      "color": "#aaaaaa",
                      "size": "sm",
                      "flex": 2
                    },
                    {
                      "type": "text",
                      "text": "10:00 - 23:00",
                      "wrap": true,
                      "color": "#666666",
                      "size": "sm",
                      "flex": 7
                    }
                  ]
                }
              ]
            }
          ]
        },
        "footer": {
          "type": "box",
          "layout": "vertical",
          "spacing": "sm",
          "contents": [
            {
              "type": "button",
              "style": "link",
              "height": "sm",
              "action": {
                "type": "uri",
                "label": "View on Cafe Nomad",
                "uri": "{{nomadUrl}}"
              },
              "color": "#905c44"
            },
            {
              "type": "button",
              "style": "link",
              "height": "sm",
              "action": {
                "type": "uri",
                "label": "Official Site",
                "uri": "https://www.google.com"
              },
              "color": "#49281A"
            },
            {
              "type": "button",
              "action": {
                "type": "postback",
                "label": "移除地點",
                "data": "delete={{id}}"
              },
              "color": "#C70039",
              "style": "link",
              "position": "relative",
              "height": "sm"
            }
          ],
          "flex": 0
        }
      },
    "status": {
      "type":"flex",
      "altText":"home",
      "contents":{
        "type": "bubble",
        "body": {
          "type": "box",
          "layout": "vertical",
          "contents": [
            {
              "type": "text",
              "text": "{{status}}",
              "weight": "bold",
              "color": "#1DB446",
              "size": "sm"
            },
            {
              "type": "text",
              "text": "{{locationName}}",
              "weight": "bold",
              "size": "xxl",
              "margin": "md"
            },
            {
              "type": "text",
              "text": "{{address}}",
              "size": "xs",
              "color": "#aaaaaa",
              "wrap": true
            },
            {
              "type": "separator",
              "margin": "xxl"
            },
            {
              "type": "box",
              "layout": "horizontal",
              "margin": "md",
              "contents": [
                {
                  "type": "text",
                  "text": "新增日期",
                  "size": "xs",
                  "color": "#aaaaaa",
                  "flex": 0
                },
                {
                  "type": "text",
                  "text": "{{date}}",
                  "color": "#aaaaaa",
                  "size": "xs",
                  "align": "end"
                }
              ]
            }
          ]
        },
        "styles": {
          "footer": {
            "separator": true
          }
        }
      }
    },
    "quickReply": { 
      "items": [
          {
              "type": "action",
              "action": {
                  "type": "location",
                  "label": "尋找附近的咖啡廳吧！"
              }
          },
          {
              "type": "action",
              "action": {
                  "type":"message",
                  "label":"我的咖啡清單",
                  "text":"我的清單"
              }
          }
      ]
    }
}